    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/location1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.b_building.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.example.b_building.Map" >
        </activity>
        <activity android:name="com.example.b_building.Graph" >
        </activity>
        <activity android:name="com.example.b_building.Classroom" >
        </activity>
        <activity
            android:name="com.example.b_building.SplashActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.b_building.Entrance"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>